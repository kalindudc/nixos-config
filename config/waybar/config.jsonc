{
  "spacing": 4,
  "modules-left": [
    "custom/os_button",
    "hyprland/workspaces",
    // "keyboard-state",
    "cava"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "idle_inhibitor",
    "memory",
    "cpu",
    "backlight",
    "pulseaudio",
    "network",
    "battery",
    "clock",
    "custom/power"
  ],
  // Modules configuration
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{icon}",
    "format-icons": {
      "active": "ÔÜí",
      "focused": "Ôíø",
      "default": "ÔÑå",
      "1": "Û∞≤°",
      "2": "Û∞≤£",
      "3": "Û∞≤•",
      "4": "Û∞≤ß",
      "5": "Û∞≤©",
      "6": "Û∞≤´",
      "7": "Û∞≤≠",
      "8": "Û∞≤Ø",
      "9": "Û∞≤±"
    },
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": []
    },
    "sorted-by-number": true
  },
  "keyboard-state": {
    "numlock": false,
    "capslock": true,
    "format": "{name} {icon} ",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    },
    "device-path": "/dev/input/event0"
  },
  "cava": {
    "framerate": 30,
    "autosens": 1,
    "bars": 14,
    "lower_cutoff_freq": 50,
    "higher_cutoff_freq": 10000,
    "method": "pipewire",
    "source": "auto",
    "stereo": true,
    "bar_delimiter": 0,
    "noise_reduction": 0.77,
    "input_delay": 2,
    "hide_on_silence": true,
    "monstercat": true,
    "waves": true,
    "format-icons": [
      "‚ñÅ",
      "‚ñÇ",
      "‚ñÉ",
      "‚ñÑ",
      "‚ñÖ",
      "‚ñÜ",
      "‚ñá",
      "‚ñà"
    ],
    "actions": {
      "on-click-right": "mode"
    }
  },
  "hyprland/submap": {
    // TODO
  },
  "hyprland/window": {
    "format": "{title}"
  },
  "custom/os_button": {
    "format": "Û±ÑÖ",
    "on-click": "rofi -show drun",
    "tooltip": true,
    "tooltip-format": "Û±ÑÖ Apps Menu"
  },
  "custom/power": {
    "format": "‚èª",
